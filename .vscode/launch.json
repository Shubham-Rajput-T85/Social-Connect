{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug TS Node",
        "runtimeExecutable": "ts-node",
        "runtimeArgs": [
          "--transpile-only",
          "--project",
          "tsconfig.json"
        ],
        "args": [
          "${workspaceFolder}/src/app.ts"
        ],
        "cwd": "${workspaceFolder}",
        "protocol": "inspector",
        "skipFiles": [
          "<node_internals>/**",
          "node_modules/**"
        ]
      }
    ]
  }